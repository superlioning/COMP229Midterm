<% include ../partials/header.ejs %>

<!-- MAIN CONTENT -->
<div class="container">
  <div class="row">
    <div class="col-md-offset-1 col-md-10">
      <h3>Prodcut details</h3>
      <!-- ------------------------ -->
      <!-- FIX THE ADD BUTTON BELOW -->
      <!-- ------------------------ -->
      <a href="/add" class="btn btn-primary"><i class="fa fa-plus"></i> Add a product</a>
      <br />
      <div class="table-responsive">
        <table class="table table-bordered table-striped table-hover">
          <thead>
            <tr>
              <th>Product id</th>
              <th class="text-center">Product name</th>
              <th class="text-center">Descriptionr</th>
              <th class="text-center">price</th>
              <th class="text-center"></th>
            </tr>
          </thead>
          <tbody>
            <!-- Template Row -->
            <% for (let count = 0; count < products.length; count++) { %>
            <tr>
              <td><%= products[count].Productid %></td>
              <td class="text-center"><%= products[count].Productname %></td>
              <td class="text-center"><%= products[count].Description %></td>
              <td class="text-center"><%= products[count].Price %></td>

              <td class="text-center">
                <!-- ------------------------ -->
                <!-- ADD the EDIT BUTTON HERE -->
                <a href="/edit/<%= products[count]._id %>" class="btn btn-primary btn-sm edit"><i class="fa fa-pencil-square-o" aria-hidden="true"></i> Edit</a></td>
                <!-- ------------------------ -->
              </td>
            </tr>
            <% } %>
          </tbody>
        </table>
      </div>
  
    <!-- ------------------------ -->
    <!-- ADD the DELETE BUTTON HERE -->
    <!-- ------------------------ -->
    <a href="/delete" class="btn btn-warning btn-sm">
      <i class="fa fa-minus-square" aria-hidden="true" fa-2x></i> Delete</a>
  </main>
  

      <div class="col-md-offset-1 col-md-10 text-center">
        <ul class="pagination pagination-lg pager" id="myPager"></ul>
      </div>
    </div>
  </div>
</div>

